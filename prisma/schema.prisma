generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id        String          @id @default(cuid())
  name      String
  createdAt DateTime        @default(now())
  members   ProjectMember[]
  plans     Plan[]
}

enum Role {
  ADMIN
  MANAGER
  USER
}

model Plan {
  id           String        @id @default(cuid())
  name         String
  filePath     String // ex: /uploads/abc123.pdf
  mimeType     String
  project      Project       @relation(fields: [projectId], references: [id])
  projectId    String
  createdAt    DateTime      @default(now())
  // Measurements liés à ce plan
  measurements Measurement[]
}

model Measurement {
  id          String          @id @default(cuid())
  plan        Plan            @relation(fields: [planId], references: [id])
  planId      String
  type        MeasurementType
  geometry    Json
  resultValue Float?
  unit        String?
  createdAt   DateTime        @default(now())
}

enum MeasurementType {
  DISTANCE
  AREA
  POLYLINE
}

model User {
  id        String          @id @default(cuid())
  email     String          @unique
  name      String?
  createdAt DateTime        @default(now())
  members   ProjectMember[]

  // NextAuth
  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ProjectMember {
  id        String  @id @default(cuid())
  role      Role
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}
